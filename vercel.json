{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend.py"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DB_NAME": "@db_name",
    "ADMIN_PASSWORD": "@admin_password",
    "SUPER_ADMIN_PASSWORD": "@super_admin_password",
    "GEMINI_API_KEY": "@gemini_api_key",
    "GEMINI_MODEL": "@gemini_model",
    "FLASK_ENV": "production"
  }
}
